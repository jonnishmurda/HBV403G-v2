<%- include('header') -%>

<div class="categories">
  <h1>Veldu spurningaflokk að neðan</h1>
  <% if (categories.length > 0) { %>
    <% categories.forEach(category => { %>
      <div class="category">
        <h2>
          <a href="/spurningar/<%= category.name.replace(/\s+/g, '-') %>">
            <%= category.name %>
          </a>
        </h2>
      </div>
    <% }) %>
  <% } else { %>
    <p>No categories available.</p>
  <% } %>
</div>

<%- include('footer') -%>
